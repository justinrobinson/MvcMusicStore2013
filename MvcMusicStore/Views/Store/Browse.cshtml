@model MvcMusicStore.Models.Genre
 
@{
    ViewBag.Title = "Browse Albums";
}
 
<div class="genre">
    <h3><em>@Model.Name</em> Albums</h3>
 
    <ul id="album-list">
        @foreach (var album in Model.Albums)
        {
            var hoverTitle = "Artist: " + album.Artist.Name + "\nTitle:  " + album.Title + "\nGenre:  " + album.Genre.Name + " (" + album.Genre.GenreId + ")" + "\nPrice:  $" + album.Price;
            
            <li>
                <a href="@Url.Action("Details", new { id = album.AlbumId })">
                    <img alt="@album.Title" src="@album.AlbumArtUrl" title="@hoverTitle"  />
                    <span>@album.Title</span>
                </a>
            </li>
        }
    </ul>
</div>
